{
  "name": "femlives",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --names app,db -c blue,cyan \"npm:dev:frontend\" \"npm:dev:db\"",
    "dev:frontend": "next dev",
    "dev:db": "npx convex dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:logout": "npx convex logout",
    "db:login": "npx convex login",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "pages:build": "npx @cloudflare/next-on-pages",
    "preview": "npm run pages:build && wrangler pages dev",
    "deploy": "npm run pages:build && wrangler pages deploy"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@react-email/components": "^0.0.25",
    "bcrypt": "^5.1.1",
    "convex": "^1.16.1",
    "convex-helpers": "^0.1.58",
    "jose": "^5.9.6",
    "luxon": "^3.5.0",
    "next": "^14.2.13",
    "react": "^18.3.1",
    "react-dom": "^18",
    "react-hook-form": "^7.53.0",
    "resend": "^4.0.0",
    "server-only": "^0.0.1",
    "sharp": "^0.33.5",
    "wrangler": "^3.86.1"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.5",
    "@cloudflare/workers-types": "^4.20241112.0",
    "@eslint/js": "^9.10.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/bcrypt": "^5.0.2",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20.16.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.8",
    "eslint-plugin-next-on-pages": "^1.13.5",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.5.0",
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "*": "eslint"
  }
}
